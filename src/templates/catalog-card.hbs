{{#each this}}
  <li class='catalog__item'>
    <img class='catalog__img' loading='lazy' src={{image}} alt='{{flowers}}' />
    <p class='catalog__description'>{{name}}: {{flowers}}</p>
    <p class='catalog__description--price'>{{price}} &#8372;</p>
    <button
      class='button-primary button-primary--catalog'
      data-id={{id}}
      type='button'
    >В кошик</button>
  </li>
{{/each}}